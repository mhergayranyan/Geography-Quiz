<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.geographyquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Geography Quiz"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GeographyQuiz">

        <!-- Main Activity (The quiz happens here) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- This is the entry point -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Result Activity (Shows the final results) -->
        <activity
            android:name=".ResultActivity"
            android:exported="false" /> <!-- Not exported since it's internal -->

    </application>

</manifest>
